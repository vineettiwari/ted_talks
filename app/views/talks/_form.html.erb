<div class= "col-md-12">
  <%= form_for @talk do |t| %>
    <div class= "col-md-2">
      <div class="form-group">
        <%= t.label :title %>
        <%= t.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class= "col-md-5">
      <br>
      <div class="form-group">
        <%= t.label :body %>
        <%= t.text_area :body, class: "form-control" %>
      </div>
      <br>
      <%= t.submit class: "btn btn-primary back-but" %>
    </div>
  <% end %>
</div>